<article class="product-item">
    <img src="https://res.cloudinary.com/dlgtx9os2/image/upload/v1644895651/plants/egiabfkjjcw9bsufncx3.png" alt="<%= product.title %>">
    <div class="product-item-content">
        <h2><%= product.title %></h2>
        <div class="product-item-actions">
            <% if (locals.isAdmin) { %>
            <a class="btn2 btn3" href="/admin/products/<%= product.id %>">View & Edit</a>
            <button class="btn2 btn-alt" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Delete</button>
            <% } else { %>
                <a class="btn btn2" href="/products/<%= product.id %>">View Details</a>
                <% } %>
        </div>
    </div>
</article>